@{
    ViewBag.Title = "Preview";
}

@section styles{
    <link href="http://cdn.bootcss.com/SyntaxHighlighter/3.0.83/styles/shCore.min.css" rel="stylesheet" />
    <link href="http://cdn.bootcss.com/SyntaxHighlighter/3.0.83/styles/shCoreDefault.min.css" rel="stylesheet" />

    <link href="~/css/lucy.preview.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script src="~/static/directive/field-directive.js"></script>

    <script src="~/static/service/MetaService.js"></script>

    <script src="~/static/controller/PreviewController.js"></script>

    <script src="~/static/lucy.js"></script>
}
<ol class="breadcrumb">
    <li><a href="#">Lucy</a></li>
    <li class="active">数据表设计</li>
</ol>
<div ng-app="preview" ng-controller="preview_controller" ng-init="init()">
    <div class="alert alert-info" style="display:none;" ng-click="removeMessage()">
        <span></span>
        <i class="glyphicon glyphicon-remove pull-right"></i>
    </div>
    <div class="alert alert-danger" style="display:none;" ng-click="removeMessage()">
        <span></span>
        <i class="glyphicon glyphicon-remove pull-right"></i>
    </div>
    <blockquote>
        <input type="text" class="tableName" placeholder="数据表名称" />
    </blockquote>

    <div class="panel panel-default mb10">
        <div class="panel-heading">表字段</div>
        <div class="panel-body" style="padding:20px">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-sm-1">
                        <label class="form-control-static">排序</label>
                    </div>
                    <div class="col-sm-3">
                        <label class="form-control-static">字段名称</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="form-control-static">字段类型</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="form-control-static">字段长度</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="form-control-static">可为空</label>
                    </div>
                    <div class="col-sm-2">
                        <label class="form-control-static">操作</label>
                    </div>
                </div>
            </div>
            <div class="form-group" id="fields">
                <field ng-repeat="field in fieldList" field="{{field}}"></field>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <a class="btn btn-success" ng-click="newField()">新增字段</a>
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-danger" ng-click="saveTable()">保存表</a>

    <div>
        <p>{{fieldList}}</p>
    </div>
</div>